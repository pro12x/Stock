{% extends 'base.html.twig' %}

{% block title %}Add Category{% endblock %}

{% block body %}
    {{ form_start(FormCategory) }}
        <div class="justify-content-center  align-items-center">
            <div class="form-group">
                <h4 class="text-center mb-4">Add Category</h4>
            </div>
            <div class="form-group mb-3">
                {{ form_row(FormCategory.name, {"attr":{"class" : "form-control", "placeholder" : "Category name"}}) }}
            </div>
            <div class="form-group mb-3 row mx-auto">
                
                <input type="submit" class="form-control btn btn-outline-primary col" value="Add">
            </div>
        </div>
    {{ form_end(FormCategory) }}
{% endblock %}
